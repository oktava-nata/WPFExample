<UserControl x:Class="Shared.User.Forms.UnauthorizedUserPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:strRes="clr-namespace:Shared.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300">
    <Border Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock  Text="{x:Static strRes:Resources.txtNotLoggedIn}" 
                        TextWrapping="NoWrap" FontWeight="Bold" HorizontalAlignment="Right"/>

            <Button Grid.Column="1" Style="{StaticResource TransparentButton}" VerticalAlignment="Center"
                    ToolTip="{x:Static strRes:Resources.txtEnter}" Click="BtnLogIn_Click">
                <Image Source="{StaticResource BtnLogin_Blue}"   />
            </Button>

        </Grid>

    </Border>

</UserControl>
